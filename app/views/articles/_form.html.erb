<%= form_for @article do |f| %>
	<%	if @article.errors.any? %>
	<h2>Errors:</h2>
	<ul>
		<% @article.errors.full_messages.each do |message| %>
			<li><%= message %></li> 
			<% end %>
	</ul>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :body %><br>
	<%= f.text_area :body %><br>
	<br> 
	<%= f.submit %>
<% end %>